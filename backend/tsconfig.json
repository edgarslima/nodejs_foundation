{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "CommonJS",
                            "moduleResolution":  "Node",
                            "rootDir":  "src",
                            "outDir":  "dist",
                            "esModuleInterop":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "baseUrl":  "./src",
                            "paths":  {
                                          "@/*":  [
                                                      "*"
                                                  ]
                                      }
                        },
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}
